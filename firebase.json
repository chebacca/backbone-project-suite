{
  "hosting": [
    {
      "target": "backbone-client",
      "public": "Dashboard-v14_2/apps/web/public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "cleanUrls": true,
      "trailingSlash": false,
      "rewrites": [
        {
          "source": "/api/**",
          "function": "api"
        },
        {
          "source": "**/*.js",
          "destination": "/$1"
        },
        {
          "source": "**/*.css",
          "destination": "/$1"
        },
        {
          "source": "**/*.@(png|jpg|jpeg|gif|svg|ico|woff2|woff|ttf|eot)",
          "destination": "/$1"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.js",
          "headers": [
            {
              "key": "Content-Type",
              "value": "application/javascript; charset=utf-8"
            },
            {
              "key": "Cache-Control",
              "value": "max-age=31536000"
            }
          ]
        }
      ]
    },
    {
      "target": "backbone-logic",
      "public": "dashboard-v14-licensing-website 2/deploy",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "cleanUrls": true,
      "trailingSlash": false,
      "rewrites": [
        {
          "source": "/api/**",
          "function": "api"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "functions": {
    "source": "Dashboard-v14_2/functions",
    "runtime": "nodejs18",
    "predeploy": [
      "cd Dashboard-v14_2/functions && npm run build"
    ]
  },
  "firestore": {
    "rules": "Dashboard-v14_2/firestore-comprehensive.rules",
    "indexes": "Dashboard-v14_2/firestore-comprehensive.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099,
      "host": "localhost"
    },
    "firestore": {
      "port": 8080,
      "host": "localhost"
    },
    "functions": {
      "port": 5001,
      "host": "localhost"
    },
    "hosting": {
      "port": 3000,
      "host": "localhost"
    },
    "storage": {
      "port": 9199,
      "host": "localhost"
    },
    "ui": {
      "enabled": true,
      "port": 4000,
      "host": "localhost"
    },
    "singleProjectMode": true
  },
  "github": {
    "repository": "https://github.com/chebacca/backbone-project-suite",
    "documentation": "https://github.com/chebacca/backbone-project-suite#readme",
    "issues": "https://github.com/chebacca/backbone-project-suite/issues",
    "deployment": {
      "webApp": "https://backbone-client.web.app",
      "api": "https://us-central1-backbone-logic.cloudfunctions.net",
      "licensing": "https://backbone-logic.web.app"
    }
  }
}
